mixin title-block(titleBlockData)
	.title-block.d-flex
		.title-block--left
			.main-title-block.d-flex
				.title-1 !{titleBlockData.mainTitle}
				.subtitle
					span.span-title.text-body #{titleBlockData.subtitle.subtitleName}
					span.span-details.text-body #{titleBlockData.subtitle.subtitleDate}
				.price-badge.headline-bold !{titleBlockData.subtitle.subtitlePrice}

			.main-badge-block.d-flex
				+badge-group(titleBlockData.badgesItems)

