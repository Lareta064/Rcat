mixin map-section(mapCode,badgeItems, linkData,metroData)
	#map
		iframe(src=" "+ mapCode width="100%" height="420" frameborder="0")
	.section-bottom.section-map--bottom.d-flex
		//- +badge-group(['ЦАО','Замоскворечье'])
		+badge-group(badgeItems)

		.link-group.d-flex
			+linkInMixin(linkData)
			//- a(href="#").simple-link Садовническая набережная,&nbsp;5&nbsp;стр.1
		.text-info.text-info--metro
			each item in metroData
				+metroStation(item)

		//- 	+metro-station-mobile([{stationName:'Новокузнецcкая',timeNum:'5 минут'},{stationName:'Третьяковская',timeNum:'7 минут'}])