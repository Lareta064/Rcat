extends ../layouts/page-layout/page.pug

block variables
	- var title = 'Страница ЖК ';
	- var pageClass = 'index-page';

block content


	.header-wrapper.mb-50

		.container
			.header
				.header-col
					.logo
						a(href="#")
							img(src="../img/logo.png", width='200' alt="logo")
					.logo-text Профессиональный каталог недвижимости Москвы
					.button
				.header-col
					.header__icon-group
						.header__icon-group__item
							+icon-search
						.header__icon-group__item
							+icon-window
						.header__icon-group__item
							+icon-heart('grey')
						.header__icon-group__item
							+notify-active
					.header__user-lk
						.header__user__avatar
							img(src="../img/avatar.jpg",width='40' height="40" alt="avatar")
						.header__user__lk-dropdown
							a(href="#") Иван Марасин
							+arrow-down

	.container
		.aprtament-table
			+table-row('1', '#', '54,5', '4','с ремонтом', 'table-photo', '320 200', '23 200 500', '340 200', '+7 929 222 5555' )
			+table-row('1', '#', '54,5', '4','без ремонта', 'plan1', '320 200', '23 200 500', '340 200', '+7 929 222 5555','цена вниз' )
			+table-row('1', '#', '54,5', '4','с ремонтом', 'table-photo2', '320 200', '23 200 500', '340 200', '+7 929 222 5555' )
			+table-row('1', '#', '54,5', '4','без ремонта', 'plan2', '320 200', '23 200 500', '340 200', '+7 929 222 5555' )

