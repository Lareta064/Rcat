extends ../../layouts/ui-layout/ui-layout.pug

block variables
	- var title = 'Шапка';
	- var pageClass= "body--dashboard";

block content
	.container.container--left
		.section-ui
			h1 Шапка
		.section-ui(style="width:1440px;")
			.container
				.header
					.header-col
						.logo
							img(src="../img/logo.png", alt="logo")
						.logo-text Профессиональный каталог недвижимости Москвы
						.button + Добавить квартиру
					.header-col
						.header__icon-group
							.header__icon-group__item
								+icon-search
							.header__icon-group__item
								+icon-window
							.header__icon-group__item
								+icon-heart('grey')
							.header__icon-group__item
								+notify-active
						.header__user-lk
							.header__user__avatar
								img(src="../img/avatar.jpg", alt="avatar")
							.header__user__lk-dropdown
								a(href="#") Иван Марасин
								+arrow-down


