			.hc-photo-wrapper
				.row
					.col-lg-6
						.hs-photo__switch-block
							.switch-block__main-photo
								img(src="../img/hc/big-photo1.jpg" alt="Фото комплекса")
							.switch-block__thumbnails.d-flex
								.thumbnails__image(data-img-path = "../img/hc/big-photo1.jpg")
