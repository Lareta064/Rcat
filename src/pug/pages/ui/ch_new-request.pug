extends ../../layouts/ui-layout/ui-layout.pug

block variables
	- var title = 'Комментарии';
	- var pageClass = 'body--dashboard';

block content
	.container.container--left
		.section-ui
			.title Карточка новых запросов
		.section-ui
			.card-offer.card-offer--new.mt-150
				.card-description
					.card-description-top
						.offer-row.offer-row--swipe
							.badge.badge--dark Новостройка
							+badge-group(['ЦАО','Замоскворечье'])
							+text-link('cardData.address','cardData.addressHref', 'appartment-card--address')
							.appartment--built.text-body.text-body--grey Сдан в 2014
							+metro('Кропоткинская')
							.appartment-page-link
								.share-link-text Поделиться
								+share-link
								+tooltip('cardData.tooltipLink','cardData.mailAddress','cardData.pdfLink')
						
						.offer-row.offer-row--title
							+link-title('cardData.title', 'cardData.titleHref')(class="link-title--middle")
							.appartment-card__price--num.headline-bold от 200 000 руб.
							.appartment-card__price--area.text-body.text-body--grey 147 115 руб./кв.м
							+repaire-item('С ремонтом')

						.offer-row.offer-row--info.text-body Ищу 1–2-комнатную квартиру в ЗАО до 92 млн. руб. Новый дом. Средний этаж. С ремонтом, в хорошем состоянии, чтобы можно было сразу въехать и жить. Другие районы и без отделки не предлагать.
							span.text-hidden Ищу 1–2-комнатную квартиру в ЗАО до 92 млн. руб. Новый дом. Средний этаж. С ремонтом, в хорошем состоянии, чтобы можно было сразу въехать и жить. Другие районы и без отделки не предлагать.
							.more
								+text-link('Развернуть','#')

						.offer-row.offer-row--tools
							.appartment-card__toolbar
								.appartment-card__toolbar-item
									+button('+798555555555', 'cardData.phoneLink', 'btn-tel contact-phone')
								.appartment-card__toolbar-item
									+link('В избранное','','icon-heart')(class="icon-heart--tablet item-favorite")
									+link('В избранное','','icon-heart','fix-width')(class="icon-heart--desk item-favorite icon-heart--small")
								.appartment-card__toolbar-item.appartment-card__toolbar-item--mail
									a.text-link.text-link--line(href='#'+ 'cardData.mailAddress') Отправить электронной почтой
									a(href='#')
										+icon-mail
								.icons-like
									+icon-group({iconName:'icon-like', countNum:'45'})
									+icon-group({iconName:'icon-dislike', countNum:'45'})
					.line
					
					.card-description-chat
						+comment("Anton",{author:'Антон Ленский,',authorLink:'#',time:'полчаса назад',addClass:'text-link--line',text:'Жанна, у меня есть несколько хороших вариантов, отправлю на почту через полчаса.'})
						+comment("Janna")
				
				.agent-card
					+agent-info({agentName:'Жанна Гончарова',agentPageLink:'#', agentClass:'text-link--line',postedTime:'поделилась лотом два часа назад',agentCompany:'APK',agentCompanyLink:'#', CompanyLinkClass:'text-link--line',agentAvatar:'agent1',downloadInfo:['user1','user2','user3','user4'] })