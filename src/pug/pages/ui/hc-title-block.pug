					.price-block.headline-bold от 23 339 642 руб.
					.bage-block
						.badge ЦАО
						.badge Замоскворечье
						+link ('Садовническая набережная, 5 стр. 1')
						+icon-metro 
						.text-body Новокузнецкая,
						.text-add 5 минут пешком
					.bage-block--mobile
						+link ('ЦАО, Замоскворечье, Садовническая набережная, 5 стр. 1')
						+icon-metro 
						span.text-body Новокузнецкая,
						span.text-add 5 мин.
						+icon-man
				.block.details-block
					.text-mob__details Обновлено сегодня 






