extends ../../layouts/ui-layout/ui-layout.pug

block variables
	- var title = 'Title-block';
	- var pageClass= "body--dashboard";

block content
	.container.container--left
		.section-ui
			h1 Название блока (ЖК «Балчуг Вьюпойнт»)
